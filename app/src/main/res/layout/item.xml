<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_img"
        android:layout_width="match_parent"
        android:layout_height="340dp"
        android:background="#606060"/>

    <RelativeLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <CheckBox
            android:id="@+id/cb_scrap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:button="@drawable/scrap_button" />

        <TextView
            android:id="@+id/tv_scrap"
            android:layout_below="@+id/cb_scrap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="스크랩"/>

        <TextView
            android:id="@+id/tv_scrapcount"
            android:layout_below="@+id/cb_scrap"
            android:layout_toRightOf="@+id/tv_scrap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            android:layout_centerVertical="true"
            android:text="200"/>

        <TextView
            android:id="@+id/tv_count"
            android:layout_below="@+id/cb_scrap"
            android:layout_toRightOf="@+id/tv_scrapcount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_centerVertical="true"
            android:text="개"/>

        <TextView
            android:id="@+id/tv_userID"
            android:layout_below="@+id/tv_scrap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="minji"/>

        <TextView
            android:id="@+id/tv_content"
            android:layout_below="@+id/tv_scrap"
            android:layout_toRightOf="@+id/tv_userID"
            android:layout_alignBaseline="@+id/tv_userID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="블라블라"/>

        <EditText
            android:id="@+id/et_comment"
            android:layout_below="@+id/tv_userID"
            android:layout_alignLeft="@+id/tv_userID"
            android:background="@drawable/comment_shape"
            android:layout_width="338dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="댓글달기..."
            />

        <ImageView
            android:id="@+id/iv_send"
            android:layout_below="@+id/tv_userID"
            android:layout_toRightOf="@id/et_comment"
            android:layout_centerVertical="true"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/send"/>


    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#808080" />
</LinearLayout>